<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LauncherActivity"
    android:background="@drawable/galben">

    <TextView
        android:id="@+id/tv_main_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_my_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="244dp"
        android:gravity="center"
        android:textAlignment="center"
        android:text="@string/BTN_my_car"
        android:background="@drawable/button_background"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_car_revisions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/BTN_car_revisions"
        android:background="@drawable/button_background"
        android:textStyle="bold|italic"
        app:layout_constraintTop_toBottomOf="@id/btn_my_car"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btn_car_changes_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/BTN_car_changes_history"
        android:background="@drawable/button_background"
        android:textStyle="bold|italic"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_car_revisions"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_service_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/BTN_service_review"
        android:background="@drawable/button_background"
        android:textStyle="bold|italic"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_car_changes_history"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/BTN_add_profile"
        android:background="@drawable/button_background"
        android:textStyle="bold|italic"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_service_review" />



</androidx.constraintlayout.widget.ConstraintLayout>